<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout"
    tools:context=".StudentInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Student's Profile"
            app:titleMarginStart="10dp"
            app:titleTextColor="#fff"
            android:background="#8692F7"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#8692F7"
            android:elevation="5dp"
            android:background="@drawable/custom_border">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:elevation="6dp"
               app:civ_border_color="#fff"
                app:civ_border_width="3dp"
                app:srcCompat="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="35dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/student_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:text="12028358"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/student_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Program - Computer Science and Engineering"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Roll No - RK20RCB36 (Term:322232)"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/student_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Email: abc@gmail.com"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/student_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Contact No: 8529179869"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/student_gpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="CGPA: 8.45"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/student_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginVertical="10dp"
            android:text="Age: 22"
            android:paddingHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Results"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#8692F7"
                    android:background="@drawable/custom_button"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attendance"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#8692F7"
                    android:background="@drawable/custom_button"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exams"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#8692F7"
                    android:background="@drawable/custom_button"
                    android:textSize="18dp"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time Table"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#8692F7"
                    android:background="@drawable/custom_button"
                    android:textSize="18dp"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Edit Student Info"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#8692F7"
            android:background="@drawable/custom_button"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/menuBar"
        app:menu="@menu/side_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/header">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>